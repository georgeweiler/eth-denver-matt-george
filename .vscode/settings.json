{
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "TypeScript"],
  "eslint.run": "onType",
  "eslint.alwaysShowStatus": true,
  "editor.formatOnSave": false,
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
